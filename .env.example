# Hospital Network Management System - Environment Configuration

# Server Configuration
PORT=3000
NODE_ENV=development # development, test, production
API_VERSION=v1

# Security Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRATION=8h
API_KEY_HEADER=X-API-Key
HOSPITAL_ID_HEADER=X-Hospital-ID

# SSL Configuration
SSL_ENABLED=true
SSL_KEY_PATH=./certs/server.key
SSL_CERT_PATH=./certs/server.crt
SSL_CA_PATH=./certs/ca.crt
SSL_REQUEST_CLIENT_CERT=false
SSL_REJECT_UNAUTHORIZED=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000 # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,https://admin.yourhospital.com

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=hospital_network
DB_USER=postgres
DB_PASSWORD=your_db_password_here
DB_SSL=false

# Network Configuration
NETWORK_ID=hospital_network_1
HOSPITAL_ID=hospital_1
HOSPITAL_NAME="General Hospital"
HEARTBEAT_INTERVAL=30000 # 30 seconds
CONNECTION_TIMEOUT=5000 # 5 seconds

# Encryption Keys
ENCRYPTION_KEY=your_encryption_key_here
ENCRYPTION_IV=your_encryption_iv_here

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760 # 10MB
ALLOWED_FILE_TYPES=.pdf,.jpg,.jpeg,.png,.docx,.xlsx,.dcm

# Audit Configuration
AUDIT_STORAGE_TYPE=file # file, database, s3
AUDIT_FILE_PATH=./audit_logs
AUDIT_ROTATION_INTERVAL=daily # hourly, daily, weekly, monthly
AUDIT_RETENTION_PERIOD=365 # days
AUDIT_SIGN_LOGS=true
AUDIT_ENCRYPT_LOGS=false
AUDIT_SENSITIVE_FIELDS=ssn,creditCard,password

# Message Broker Configuration (RabbitMQ)
RABBITMQ_URL=amqp://localhost
RABBITMQ_EXCHANGE=hospital_network
RABBITMQ_QUEUE=hospital_queue
RABBITMQ_ROUTING_KEY=hospital.events

# FHIR Configuration
FHIR_SERVER_URL=http://localhost:8080/fhir
FHIR_VERSION=R4
FHIR_AUTH_TYPE=none # none, basic, bearer
FHIR_AUTH_USERNAME=
FHIR_AUTH_PASSWORD=
FHIR_AUTH_TOKEN=

# DICOM Configuration
DICOM_STORAGE_DIR=./dicom_storage
DICOM_TEMP_DIR=./dicom_temp
DICOM_MAX_FILE_SIZE=104857600 # 100MB

# Cross-Hospital Configuration
CROSS_HOSPITAL_TOKEN_EXPIRY=3600 # 1 hour
CROSS_HOSPITAL_MAX_REQUESTS=1000

# Logging Configuration
LOG_LEVEL=info # debug, info, warn, error
LOG_FORMAT=combined # common, combined, dev, short, tiny
LOG_FILE=./logs/app.log

# AI Service Configuration (Optional)
AI_SERVICE_ENABLED=false
AI_SERVICE_URL=http://localhost:5000
AI_SERVICE_API_KEY=your_ai_service_api_key_here